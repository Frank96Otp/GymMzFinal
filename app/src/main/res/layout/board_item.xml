<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:id="@+id/container">

    <ImageView
        android:id="@+id/ivImgBoard"
        android:layout_width="330dp"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat= "@tools:sample/backgrounds/scenic"
        android:contentDescription="@null"
        />

    <TextView
        android:id="@+id/tvTituloBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="texto de titulo"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivImgBoard"
        />
    <TextView
        android:id="@+id/tvBodyBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text= "dsfsdfdsfs"
        android:maxWidth="310dp"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloBoard"
        />

     <com.google.android.material.button.MaterialButton
         android:id="@+id/btnNextBoard"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/next"
         android:textSize="15sp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>